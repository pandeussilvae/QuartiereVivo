rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function hasClaim(role) {
      return isSignedIn() && request.auth.token[role] == true;
    }

    function hasRoleDoc(role) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles/$(request.auth.uid))
        && get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == role;
    }

    function isAdmin() {
      return hasClaim('admin') || hasRoleDoc('admin');
    }

    function isModerator() {
      return isAdmin() || hasClaim('moderator') || hasRoleDoc('moderator');
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function allowedSegnalazioneStatuses() {
      return ['nuova', 'in_carico', 'risolta'];
    }

    function hasOnlyAllowedSegnalazioneKeys() {
      return request.resource.data.keys().hasOnly([
        'titolo',
        'descrizione',
        'categoria',
        'latitudine',
        'longitudine',
        'immagineUrl',
        'creatoreId',
        'stato',
        'createdAt',
        'updatedAt',
        'updatedBy'
      ]);
    }

    function hasRequiredSegnalazioneKeys() {
      return request.resource.data.keys().hasAll([
        'titolo',
        'descrizione',
        'categoria',
        'latitudine',
        'longitudine',
        'creatoreId',
        'stato',
        'createdAt',
        'updatedAt',
        'updatedBy'
      ]);
    }

    function hasValidSegnalazioneTypes() {
      return request.resource.data.titolo is string
        && request.resource.data.descrizione is string
        && request.resource.data.categoria is string
        && request.resource.data.latitudine is number
        && request.resource.data.longitudine is number
        && (request.resource.data.immagineUrl == null || request.resource.data.immagineUrl is string)
        && request.resource.data.creatoreId is string
        && request.resource.data.stato is string
        && request.resource.data.createdAt is timestamp
        && request.resource.data.updatedAt is timestamp
        && request.resource.data.updatedBy is string;
    }

    function hasValidStato() {
      return request.resource.data.stato in allowedSegnalazioneStatuses();
    }

    function ownerCanUpdateOwnSegnalazione() {
      return request.resource.data.creatoreId == resource.data.creatoreId
        && request.resource.data.stato == resource.data.stato
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.updatedBy == request.auth.uid
        && request.resource.data.updatedAt >= resource.data.updatedAt;
    }

    function moderatorCanChangeStatusOnly() {
      return request.resource.data.creatoreId == resource.data.creatoreId
        && request.resource.data.titolo == resource.data.titolo
        && request.resource.data.descrizione == resource.data.descrizione
        && request.resource.data.categoria == resource.data.categoria
        && request.resource.data.immagineUrl == resource.data.immagineUrl
        && request.resource.data.latitudine == resource.data.latitudine
        && request.resource.data.longitudine == resource.data.longitudine
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.stato in allowedSegnalazioneStatuses()
        && request.resource.data.updatedBy == request.auth.uid
        && request.resource.data.updatedAt >= resource.data.updatedAt;
    }

    // Optional profile documents for users.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create, update, delete: if isOwner(userId) || isAdmin();
    }

    // Custom role mapping: { role: "admin" | "moderator" }
    match /roles/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Segnalazioni.
    match /segnalazioni/{segnalazioneId} {
      allow read: if isSignedIn();

      allow create: if isSignedIn()
        && hasOnlyAllowedSegnalazioneKeys()
        && hasRequiredSegnalazioneKeys()
        && hasValidSegnalazioneTypes()
        && request.resource.data.creatoreId == request.auth.uid
        && request.resource.data.updatedBy == request.auth.uid
        && request.resource.data.stato == 'nuova';

      allow update: if hasOnlyAllowedSegnalazioneKeys()
        && hasRequiredSegnalazioneKeys()
        && hasValidSegnalazioneTypes()
        && hasValidStato()
        && (
          (isOwner(resource.data.creatoreId) && ownerCanUpdateOwnSegnalazione())
          || (isModerator() && moderatorCanChangeStatusOnly())
        );

      allow delete: if isOwner(resource.data.creatoreId) || isAdmin();
    }
  }
}
